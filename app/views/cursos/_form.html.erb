<%= form_with(model: curso, local: true) do |form| %>
<% if curso.errors.any? %>
  <div class="alert alert-danger">
    <h2><%= pluralize(curso.errors.count, "error") %>
      prohibited this curso from being saved:</h2>

    <ul>
      <% curso.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-group">
  <%= form.label :descricao %>
  <%= form.text_field :descricao, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :duracao %>
  <%= form.number_field :duracao, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :periodo %>
  <%= form.text_field :periodo, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :semestre_id %>
  <%= form.collection_select :semestre_id, Semestre.order(:descricao), :id, :descricao,{prompt: "Selecione o semestre"},{class: "form-control"} %>
</div>

<div class="form-group">
  <%= form.submit nil, class: "btn btn-primary" %>
</div>
<% end %>