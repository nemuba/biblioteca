<%= title "Cursos" %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <% model_class = Curso %>
        <h1 class="mt-2 pb-2"><%= t('.list', :default=> t('helpers.title.list', :model=> model_class.model_name.human.titleize.pluralize)) %></h1>
        <%= render partial: 'form-search' %>
        <div class="table-responsive">
          <table class="table table-hover table-striped">
            <thead class="thead-dark">
              <tr>
                <th scope="col">#</th>
                <th scope="col"><%= model_class.human_attribute_name(:descricao) %></th>
                <th scope="col"><%= model_class.human_attribute_name(:duracao) %></th>
                <th scope="col"><%= model_class.human_attribute_name(:periodo) %></th>
                <th scope="col"><%= model_class.human_attribute_name(:semestre_id) %></th>
                <th colspan="3" scope="col" class="text-center"><%= t('.options', :default=> t('helpers.options')) %></th>
              </tr>
            </thead>

            <tbody>
              <% @cursos.each do |curso| %>
                <tr>
                  <th scope="row"><%= curso.id %></th>
                  <td><%= curso.descricao %></td>
                  <td><%= curso.duracao %></td>
                  <td><%= curso.periodo %></td>
                  <td><%= curso.semestre.descricao %></td>
                  <td><%= link_to t('.show', :default=> t('helpers.submit.show')), curso, class: "btn btn-outline-info btn-sm" %></td>
                  <td><%= link_to t('.edit', :default=> t('helpers.submit.edit')), edit_curso_path(curso), class: "btn btn-outline-success btn-sm" %></td>
                  <td><%= link_to t('.delete', :default=> t('helpers.submit.delete')), curso, class: "btn btn-outline-danger btn-sm", method: :delete, data: { confirm: t('.delete', :default=> t('helpers.messages.delete')) } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <br>
        <%= link_to t('.new', :default=> t('helpers.submit.new')), new_curso_path, class: "btn btn-primary" %>
        <div class="row justify-content-center mb-3">
          <div class="col-6">
            <div class="row justify-content-end">
              <%= page_entries_info @cursos, entry_name: "#{model_class.model_name.human.titleize}(s)" %>
            </div>
          </div>
          <div class="col-6">
            <div class="row justify-content-end">
              <%= paginate @cursos, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>