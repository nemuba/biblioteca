<%= title "Editar Curso" %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <% model_class = Curso %>
        <h1 class="mt-2 pb-2"><%= t('.edit', :default=> t('helpers.title.edit', :model=> model_class.model_name.human.titleize)) %></h1>

        <%= render 'form', curso: @curso %>

        <%= link_to t('.show', :default=> t('helpers.submit.show')), @curso, class: "btn btn-info btn-sm" %>
        |
        <%= link_to t('.back', :default=> t('helpers.submit.back')), cursos_path, class: "btn btn-danger btn-sm" %>
      </div>
    </div>
  </div>