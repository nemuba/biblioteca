<div class="container">
  <div class="row justify-content-end">
    <div class="col-lg-8">
      <% model_class = Semestre %>
        <h1 class="mt-2 pb-2">
          <%= t('.list', :default=> t('helpers.title.list', :model=> model_class.model_name.human.titleize.pluralize)) %>
        </h1>

        <table class="table table-border">
          <thead>
            <tr>
              <th><%= model_class.human_attribute_name(:descricao) %></th>
              <th colspan="3"><%= t('.options', :default=> t('helpers.options')) %></th>
            </tr>
          </thead>

          <tbody>
            <% @semestres.each do |semestre| %>
              <tr>
                <td><%= semestre.descricao %></td>
                <td><%= link_to t('.show', :default=> t('helpers.submit.show')), semestre, class: "btn btn-outline-info btn-sm" %></td>
                <td><%= link_to t('.edit', :default=> t('helpers.submit.edit')), edit_semestr_path(semestre),class: "btn btn-outline-success btn-sm" %></td>
                <td><%= link_to t('.delete', :default=> t('helpers.submit.delete')), semestre, class: "btn btn-outline-danger btn-sm",method: :delete, data: { confirm: t('.delete', :default=> t('helpers.messages.delete')) } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <hr>
        <%= link_to t('.new', :default=> t('helpers.submit.new')), new_semestr_path, class: "btn btn-primary" %>

      </div>
    </div>
  </div>