<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <% model_class = Materia %>
        <h1 class="mt-2 pb-2"><%= t('.list', :default=> t('helpers.title.list', :model=> model_class.model_name.human.titleize.pluralize)) %></h1>
        <%= render partial: 'form-search' %>
        <table class="table table-striped table-hover">
          <thead class="thead-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col"><%= model_class.human_attribute_name(:descricao) %></th>
              <th scope="col"><%= model_class.human_attribute_name(:carga_horaria) %></th>
              <th scope="col"><%= model_class.human_attribute_name(:curso_id) %></th>
              <th scope="col" colspan="3" class="text-center"><%= t('.options', :default=> t('helpers.options')) %></th>
            </tr>
          </thead>

          <tbody>
            <% @materias.each do |materia| %>
              <tr>
                <th scope="row"><%= materia.id %></th>
                <td><%= materia.descricao %></td>
                <td><%= materia.carga_horaria %></td>
                <td><%= materia.curso.descricao %></td>
                <td><%= link_to t('.show', :default=> t('helpers.submit.show')), materia, class: "btn btn-outline-info btn-sm" %></td>
                <td><%= link_to t('.edit', :default=> t('helpers.submit.edit')), edit_materia_path(materia), class: "btn btn-outline-success btn-sm" %></td>
                <td><%= link_to t('.delete', :default=> t('helpers.submit.delete')), materia, class: "btn btn-outline-danger btn-sm", method: :delete, data: { confirm: t('.delete', :default=> t('helpers.messages.delete')) } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <br>
        <%= link_to t('.new', :default=> t('helpers.submit.new')), new_materia_path, class: "btn btn-primary" %>
        <div class="row justify-content-center mb-3">
          <div class="col-6">
            <div class="row justify-content-end">
              <%= page_entries_info @materias, entry_name: "#{model_class.model_name.human.titleize}(s)" %>
            </div>
          </div>
          <div class="col-6">
            <div class="row justify-content-end">
              <%= paginate @materias, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>