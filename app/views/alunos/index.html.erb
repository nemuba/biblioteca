<%= title "Alunos" %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <% model_class = Aluno %>
        <h1 class="mt-2 pb-2"><%= t('.list', :default=> t('helpers.title.list', :model=> model_class.model_name.human.titleize.pluralize)) %></h1>

        <%= render partial: 'form-search' %>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="thead-dark">
              <tr>
                <th scope="col">#</th>
                <th scope="col"><%= model_class.human_attribute_name(:nome) %></th>
                <th scope="col"><%= model_class.human_attribute_name(:ra) %></th>
                <th scope="col"><%= model_class.human_attribute_name(:email) %></th>
                <th scope="col"><%= model_class.human_attribute_name(:curso_id) %></th>
                <th scope="col" colspan="3" class="text-center"><%= t('.options', :default=> t('helpers.options')) %></th>
              </tr>
            </thead>
            <tbody>
              <% @alunos.each do |aluno| %>
                <tr>
                  <th scope="row"><%= aluno.id %></th>
                  <td><%= aluno.nome %></td>
                  <td><%= aluno.ra %></td>
                  <td><%= aluno.email %></td>
                  <td><%= aluno.curso.descricao %></td>
                  <td><%= link_to t('.show', :default=> t('helpers.submit.show')), aluno, class: "btn btn-outline-info btn-sm" %></td>
                  <td><%= link_to t('.edit', :default=> t('helpers.submit.edit')), edit_aluno_path(aluno), class: "btn btn-outline-success btn-sm" %></td>
                  <td><%= link_to t('.delete', :default=> t('helpers.submit.delete')), aluno, class: "btn btn-outline-danger btn-sm", method: :delete, data: { confirm: t('.delete', :default=> t('helpers.messages.delete')) } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <br>
        <%= link_to t('.new', :default=> t('helpers.submit.new')), new_aluno_path, class: "btn btn-primary" %>
        <div class="row justify-content-center mb-3">
          <div class="col-6">
            <div class="row justify-content-end">
              <%= page_entries_info @alunos, entry_name: "#{model_class.model_name.human.titleize}(s)" %>
            </div>
          </div>
          <div class="col-6">
            <div class="row justify-content-end">
              <%= paginate @alunos, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>